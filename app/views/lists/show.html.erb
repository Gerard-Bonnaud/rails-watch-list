<div class="container-sm mt-5">

  <h1 class="text-primary"><strong>List-name</strong></h1>
  <p class="text-danger">
    <%= @list.name %>
  </p>

  <% @list.movies.each do |movie| %>
  <ul>
    <li><%= link_to "#{movie.title}", movie_path(movie) %></li>
  </ul>
  <% end %>
    <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>

    <%= link_to "Back to list", lists_path, class: "btn btn-dark" %>
</div>
